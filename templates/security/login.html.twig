{% extends 'base.html.twig' %}

{% block title %}Connexion - EfreiTech{% endblock %}

{% block body %}
<div class="max-w-md mx-auto">
    <div class="content-container">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Connexion</h1>
            <p class="text-gray-600">Accédez à votre espace EfreiTech</p>
        </div>

        <form method="post">
            {% if error %}
                <div class="flash-message flash-error">
                    <div class="flex items-center gap-2">
                        <span class="text-2xl">⚠️</span>
                        <span class="font-semibold">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                    <p class="text-blue-800">
                        Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>
                    </p>
                    <a href="{{ path('app_logout') }}" class="text-blue-600 hover:text-blue-800 font-semibold">Se déconnecter</a>
                </div>
            {% endif %}

            <div class="mb-6">
                <label for="inputEmail" class="block font-semibold text-gray-700 mb-2">
                    Adresse email
                </label>
                <input 
                    type="email" 
                    value="{{ last_username }}" 
                    name="email" 
                    id="inputEmail" 
                    class="form-input" 
                    autocomplete="email" 
                    required 
                    autofocus
                    placeholder="votre@email.com"
                >
            </div>

            <div class="mb-6">
                <label for="inputPassword" class="block font-semibold text-gray-700 mb-2">
                    Mot de passe
                </label>
                <input 
                    type="password" 
                    name="password" 
                    id="inputPassword" 
                    class="form-input" 
                    autocomplete="current-password" 
                    required
                    placeholder="••••••••"
                >
            </div>

            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <div class="mb-6">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" name="_remember_me" class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
                    <span class="text-gray-700">Se souvenir de moi</span>
                </label>
            </div>

            <button class="btn-primary w-full text-lg mb-4" type="submit">
                Se connecter
            </button>

            <div class="text-center space-y-2">
                <a href="{{ path('app_forgot_password_request') }}" class="block text-purple-600 hover:text-purple-800 font-semibold">
                    Mot de passe oublié ?
                </a>
                <p class="text-gray-600">
                    Pas encore de compte ? 
                    <a href="{{ path('app_register') }}" class="text-purple-600 hover:text-purple-800 font-semibold">
                        S'inscrire
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>
{% endblock %}
