{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }} - EfreiTech{% endblock %}

{% block body %}
    <div class="mb-4">
        <a href="{{ path('app_produit_index') }}" class="text-purple-600 hover:text-purple-800 font-semibold">
            ← Retour à la liste des produits
        </a>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
        <!-- Image du produit -->
        <div class="content-container">
            <div class="bg-gray-200 rounded-lg overflow-hidden" style="height: 500px;">
                {% if produit.image %}
                    <img src="{{ produit.image }}" alt="{{ produit.nom }}" class="w-full h-full object-cover">
                {% else %}
                    <div class="flex items-center justify-center h-full bg-gray-300">
                        <span class="text-gray-500 font-bold text-2xl">Pas d'image</span>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Détails du produit -->
        <div class="content-container">
            <div class="mb-6">
                <h1 class="text-4xl font-bold text-gray-800 mb-4">{{ produit.nom }}</h1>
                
                {% if produit.stock <= 0 %}
                    <span class="badge badge-danger text-lg">Rupture de stock</span>
                {% elseif produit.stock < 10 %}
                    <span class="badge badge-warning text-lg">Stock limité ({{ produit.stock }} restants)</span>
                {% else %}
                    <span class="badge badge-success text-lg">En stock ({{ produit.stock }} unités)</span>
                {% endif %}
            </div>

            <div class="mb-6 pb-6 border-b border-gray-200">
                <div class="text-5xl font-bold text-blue-600">
                    {{ produit.prix|number_format(2, ',', ' ') }}€
                </div>
                <p class="text-gray-500 mt-1">Prix TTC</p>
            </div>

            <div class="mb-6">
                <h2 class="text-xl font-bold text-gray-800 mb-3">Description</h2>
                <p class="text-gray-700 leading-relaxed">
                    {{ produit.description }}
                </p>
            </div>

            <div class="mb-6 p-4 bg-purple-50 rounded-lg">
                <h3 class="font-bold text-purple-800 mb-2">Informations produit</h3>
                <div class="grid grid-cols-2 gap-3 text-sm">
                    <div>
                        <span class="text-gray-600">Référence:</span>
                        <span class="font-semibold ml-2">#{{ produit.id }}</span>
                    </div>
                    <div>
                        <span class="text-gray-600">Disponibilité:</span>
                        <span class="font-semibold ml-2 {% if produit.stock > 0 %}text-green-600{% else %}text-red-600{% endif %}">
                            {% if produit.stock > 0 %}Disponible{% else %}Indisponible{% endif %}
                        </span>
                    </div>
                </div>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="flex gap-3 pt-6 border-t border-gray-200">
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="flex-1 text-center btn-secondary">
                        Modifier le produit
                    </a>
                    <div class="flex-1">
                        {{ include('produit/_delete_form.html.twig') }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
