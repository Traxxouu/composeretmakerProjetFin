{% extends 'base.html.twig' %}

{% block title %}Modifier {{ produit.nom }} - EfreiTech{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto">
        <div class="mb-6">
            <a href="{{ path('app_produit_index') }}" class="text-purple-600 hover:text-purple-800 font-semibold">
                ← Retour à la liste des produits
            </a>
        </div>

        <div class="content-container">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">Modifier le produit</h1>
                <p class="text-gray-600">Mettez à jour les informations du produit</p>
            </div>

            {{ include('produit/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

            <div class="mt-8 pt-6 border-t border-gray-200">
                <h3 class="text-lg font-bold text-gray-700 mb-3">Zone de danger</h3>
                {{ include('produit/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
