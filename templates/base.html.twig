<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}EfreiTech{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üñ•Ô∏è</text></svg>">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
        {% block stylesheets %}
            <script src="https://cdn.tailwindcss.com"></script>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="min-h-screen">
        <!-- Navigation -->
        <nav class="sticky top-0 z-50 shadow-lg">
            <div class="container mx-auto px-6 py-4">
                <div class="flex justify-between items-center">
                    <a href="{{ path('app_home') }}" class="flex items-center gap-2">
                        <span class="text-2xl font-bold text-white" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
                            EfreiTech
                        </span>
                    </a>
                    
                    <div class="hidden md:flex gap-8 items-center">
                        <a href="{{ path('app_home') }}" class="text-white hover:text-gray-300 font-semibold transition-colors">
                            Accueil
                        </a>
                        <a href="{{ path('app_produit_index') }}" class="text-white hover:text-gray-300 font-semibold transition-colors">
                            Produits
                        </a>
                        <a href="{{ path('app_contact') }}" class="text-white hover:text-gray-300 font-semibold transition-colors">
                            Contact
                        </a>
                        
                        {% if app.user %}
                            <div class="flex items-center gap-4">
                                <span class="text-gray-300 text-sm font-semibold">
                                    {{ app.user.email }}
                                </span>
                                <a href="{{ path('app_profil') }}" class="text-white hover:text-gray-300 font-semibold transition-colors">
                                    Profil
                                </a>
                                <a href="{{ path('app_logout') }}" class="bg-white hover:bg-gray-200 text-black px-4 py-2 rounded-lg border-2 border-black font-semibold transition-all">
                                    D√©connexion
                                </a>
                            </div>
                        {% else %}
                            <div class="flex items-center gap-4">
                                <a href="{{ path('app_login') }}" class="text-white hover:text-gray-300 font-semibold transition-colors">
                                    Connexion
                                </a>
                                <a href="{{ path('app_register') }}" class="btn-primary">
                                    Inscription
                                </a>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Mobile menu button -->
                    <button class="md:hidden text-white" onclick="toggleMobileMenu()">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>

                <!-- Mobile menu -->
                <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
                    <div class="flex flex-col gap-3">
                        <a href="{{ path('app_home') }}" class="text-white hover:text-gray-300 font-semibold">Accueil</a>
                        <a href="{{ path('app_produit_index') }}" class="text-white hover:text-gray-300 font-semibold">Produits</a>
                        <a href="{{ path('app_contact') }}" class="text-white hover:text-gray-300 font-semibold">Contact</a>
                        {% if app.user %}
                            <a href="{{ path('app_profil') }}" class="text-white hover:text-gray-300 font-semibold">Profil</a>
                            <a href="{{ path('app_logout') }}" class="bg-white hover:bg-gray-200 text-black px-4 py-2 rounded-lg border-2 border-black font-semibold text-center">D√©connexion</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="text-white hover:text-gray-300 font-semibold">Connexion</a>
                            <a href="{{ path('app_register') }}" class="btn-primary text-center">Inscription</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="container mx-auto px-6 py-8 animate-fadeIn">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-message {% if label == 'success' %}flash-success{% else %}flash-error{% endif %}">
                        <span class="font-semibold">{{ message }}</span>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="text-white mt-20">
            <div class="container mx-auto px-6 py-8">
                <div class="grid md:grid-cols-3 gap-8 mb-6">
                    <div>
                        <h3 class="text-xl font-bold mb-3">
                            EfreiTech
                        </h3>
                        <p class="text-gray-300">
                            Votre boutique de confiance pour tout le mat√©riel informatique professionnel.
                        </p>
                    </div>
                    
                    <div>
                        <h4 class="font-bold mb-3">Liens rapides</h4>
                        <div class="flex flex-col gap-2">
                            <a href="{{ path('app_produit_index') }}" class="text-gray-300 hover:text-white transition-colors">Nos produits</a>
                            <a href="{{ path('app_contact') }}" class="text-gray-300 hover:text-white transition-colors">Contact</a>
                            <a href="{{ path('app_about') }}" class="text-gray-300 hover:text-white transition-colors">Qui sommes-nous ?</a>
                        </div>
                    </div>
                    
                    <div>
                        <h4 class="font-bold mb-3">Informations l√©gales</h4>
                        <div class="flex flex-col gap-2">
                            <a href="{{ path('app_mentions') }}" class="text-gray-300 hover:text-white transition-colors">Mentions l√©gales</a>
                            <a href="{{ path('app_cgu') }}" class="text-gray-300 hover:text-white transition-colors">CGU</a>
                            <a href="{{ path('app_cgv') }}" class="text-gray-300 hover:text-white transition-colors">CGV</a>
                            <a href="{{ path('app_confidentialite') }}" class="text-gray-300 hover:text-white transition-colors">Confidentialit√©</a>
                        </div>
                    </div>
                </div>
                
                <div class="border-t border-gray-700 pt-6 text-center text-gray-300">
                    <p>&copy; 2025 EfreiTech - Tous droits r√©serv√©s</p>
                </div>
            </div>
        </footer>

        <script>
            function toggleMobileMenu() {
                const menu = document.getElementById('mobile-menu');
                menu.classList.toggle('hidden');
            }
        </script>
    </body>
</html>